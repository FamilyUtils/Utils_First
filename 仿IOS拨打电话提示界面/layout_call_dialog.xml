<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/x231"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_call">

    <TextView
        android:id="@+id/tv_dialoge_mobile"
        android:layout_width="match_parent"
        tools:text="1000000"
        android:textStyle="bold"
        android:textSize="@dimen/textsize_sixteen"
        android:gravity="center"
        android:layout_height="@dimen/x50"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x39">
        <TextView
            android:id="@+id/tv_dialog_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/call_cancle"
            android:textSize="@dimen/textsize_sixteen"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="0.5dp"
            android:background="@color/gray"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_dialog_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/call_calling"
            android:textSize="@dimen/textsize_sixteen"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>